{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "dist",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "allowJs": false,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "typeRoots": ["types/**", "./node_modules/@types"],
    "types": ["react", "react-native", "jest"]
  },
  "filesGlob": ["types/**", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["android", "ios", "build", "dist", "node_modules", "babel.config.js"],
}
